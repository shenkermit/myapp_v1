<% provide(:title, '修改密码') %>
<div class='page-header'>
  <h1 class='pull-left'>
    <i class='icon-cog'></i>
    <span>修改密码</span>
  </h1>
</div>
<div class='row-fluid'>
  <div class='box'>
    <div class='box-content'>
      <%= form_for @user, :url => url_for(:controller => 'users', :action => "change_password"), 
            :html => {class:'form-horizontal'} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class='control-group'>
          <%= f.label :current_password, "旧密码", class: "control-label" %>
          <div class='controls'>
            <%= f.password_field :current_password, placeholder: '旧密码' %>
          </div>
        </div>
        <div class='control-group'>
          <%= f.label :password, "新密码", class: "control-label" %>
          <div class='controls'>
            <%= f.password_field :password, placeholder: '新密码' %>
          </div>
        </div>
        <div class='control-group'>
          <%= f.label :password_confirmation, "确认密码", class: "control-label" %>
          <div class='controls'>
            <%= f.password_field :password_confirmation, placeholder: '确认密码' %>
          </div>
        </div>
        <div class='form-actions'>
          <div class='text-left'>
            <%= button_tag class: "btn btn-primary btn-large" do %>
              <i class='icon-save'></i>
              保存
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>